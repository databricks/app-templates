{
  "name": "databricks/e2e-chatbot-app",
  "version": "3.1.0",
  "private": true,
  "workspaces": ["client", "server"],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:client\"",
    "dev:server": "pnpm --filter @databricks/chatbot-server dev",
    "dev:client": "pnpm --filter @databricks/chatbot-client dev",
    "build": "pnpm run build:client && pnpm run build:server",
    "build:client": "pnpm --filter @databricks/chatbot-client build",
    "build:server": "pnpm --filter @databricks/chatbot-server build",
    "start": "pnpm --filter @databricks/chatbot-server start",
    "lint": "biome lint --write --unsafe",
    "lint:fix": "biome lint --write --unsafe && biome format --write",
    "format": "biome format --write",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "pnpm exec tsx --env-file=.env.local packages/backend/db/src/migrate.ts",
    "db:reset": "pnpm exec tsx scripts/reset-database.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:check": "drizzle-kit check",
    "db:up": "drizzle-kit up",
    "test": "export DATABRICKS_CLIENT_ID=mock-value && export DATABRICKS_CLIENT_SECRET=mock-value && export DATABRICKS_HOST=mock-value && export PLAYWRIGHT=True && playwright test",
    "generate:package": "NODE_OPTIONS='--import tsx' plop --plopfile tools/create-package.ts"
  },
  "dependencies": {
    "@ai-sdk/provider": "catalog:",
    "@ai-sdk/provider-utils": "catalog:",
    "dotenv": "^16.4.5",
    "tsx": "^4.19.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.8.6",
    "concurrently": "^8.2.2",
    "plop": "^4.0.4",
    "tsdown": "catalog:",
    "typescript": "^5.6.3"
  }
}
